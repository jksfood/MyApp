<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.info.aegis.myapplication">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.ClipMatrixActivity"></activity>
        <activity android:name=".activity.TextPaintActivity" />
        <activity android:name=".activity.TextPathActivity" />
        <activity android:name=".activity.FillPathActivity" />
        <activity android:name=".activity.MaskFilterActivity" />
        <activity android:name=".activity.ShadowLayerActivity" />
        <activity android:name=".activity.PathEffectActivity" />
        <activity android:name=".activity.StrokeJoinMiterLengthActivity" />
        <activity android:name=".activity.StrokeJoinActivity" />
        <activity android:name=".activity.StrokeCapActivity" />
        <activity android:name=".activity.XferModeActivity" />
        <activity android:name=".activity.ColorMatrixColorFilterActivity" />
        <activity android:name=".activity.LightColorFilterActivity" />
        <activity android:name=".activity.ComposeShaderActivity" />
        <activity android:name=".activity.BitmapShaderActivity" />
        <activity android:name=".activity.SweepGradientActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity android:name=".activity.RadiationGradientActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity android:name=".activity.LinearGradientActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity android:name=".activity.FiveStarActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity android:name=".activity.HeartActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity android:name=".activity.PieActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity android:name=".activity.HistogramActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity android:name=".activity.GetWeChatNotificationActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".service.GetWeChatNotificationService"
            android:label="通知监控"
            android:permission="android.permission.BIND_NOTIFICATION_LISTENER_SERVICE"
            android:priority="1000">
            <intent-filter>
                <action android:name="android.service.notification.NotificationListenerService" />
            </intent-filter>
        </service>
    </application>

</manifest>